<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>AMPLink Control Panel</title>
<link href="style.css" rel="stylesheet" type="text/css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

<div class="sidenav">
  <img src="resources/images/branding.png" alt="branding" width="200" height="80">
  <a href="/">Home</a>
  <a href="/panel">Server Control Panel&nbsp;</a>
  <a href="/console">Server Console</a>
  <a href="/users">Users</a>
  <a href="/about">About</a>
  <div class="brightercolor"><a href="#">Welcome<br><form action="/logout"><input type="submit" value="Logout" class="btn btn-danger"></form></a></div>
</div>
<main>
<div class="content">
  <h2>Server Control Panel</h2>
	<hr>
	<!--<h3>&nbsp;</h3>-->
	<!--Container-->
    <div class="row">
      <div class="col-xl-4 alert sidebarAccentColor text-white"><strong>Server Information</strong>
        <hr>
		{{#if sn}} 
    <p class="alert bg-gradient"><strong>Server Name: </strong>{{sn}}<br>
    {{/if}}
		

    {{#if mn}} 
    <strong>Map Name: </strong>{{mn}}<br>
    {{/if}}

    {{#if sd}} 
    <strong>Server Description: </strong>{{sd}}<br>
    {{/if}}

    {{#if ml}} 
    <strong>Member Limit: </strong>{{ml}}<br>
    {{/if}}

    {{#if ipn}} 
    <strong>Local Address: </strong>{{ipn}}:{{#if pt}}{{pt}}{{/if}}
    {{/if}}

    
</p>
		</div>
      <div class="offset-xl-1 col-xl-6 alert sidebarAccentColor text-white " ><strong>Current Connected Players</strong><hr><br>
		<div id="players"></div>
	  </div>
		<!--Divider-->
	  <div class=""><br></div>
		<div class="col-xl-4 alert sidebarAccentColor text-white"><strong>Enter the Configurator to edit configuraiton files.&nbsp;</strong>
		  <hr>
		<form action="/postConfigurator" method="POST"><input type="submit" value="Enter Configurator (WIP)" class="btn btn-danger"></form>
	  </div>
    </div>


</div>

<script>
  const updateVariable = () => {
    fetch('/panel/players')
      .then((response) => response.text())
      
      .then((result) => {
        //JSON.parse(result)
        document.getElementById('players').innerHTML = result;
      });
      
  };

  setInterval(updateVariable, 1000);
</script>


</main>
</body>
</html>